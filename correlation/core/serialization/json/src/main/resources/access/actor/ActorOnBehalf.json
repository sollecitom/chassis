{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "unevaluatedProperties": false,
  "required": [
    "type",
    "account",
    "benefiting-account",
    "authentication"
  ],
  "properties": {
    "type": {
      "type": "string",
      "const": "on-behalf"
    },
    "account": {
      "$ref": "/access/actor/Account.json"
    },
    "benefiting-account": {
      "$ref": "/access/actor/Account.json"
    },
    "authentication": {
      "$ref": "/access/authentication/Authentication.json"
    }
  }
}