{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "email": {
      "type": "object",
      "properties": {
        "address": {
          "type": "string",
          "minLength": 3
        }
      },
      "required": [
        "address"
      ]
    },
    "device": {
      "type": "object",
      "properties": {
        "description": {
          "type": "string",
          "minLength": 1
        },
        "product-code": {
          "type": "string",
          "minLength": 1
        }
      },
      "required": [
        "description"
      ]
    }
  },
  "required": [
    "email",
    "device"
  ]
}