{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "id",
    "timestamp",
    "type",
    "context"
  ],
  "properties": {
    "id": {
      "$ref": "/correlation/identity/Id.json"
    },
    "type": {
      "$ref": "/ddd/event/EventType.json"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time"
    },
    "context": {
      "$ref": "/ddd/event/EventContext.json"
    }
  }
}